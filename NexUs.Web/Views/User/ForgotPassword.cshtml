@model NexUs.Core.Application.ViewModels.Users.ForgotPasswordViewModel
@section NoSidebar { }
@{
    ViewData["Title"] = "Olvidé contraseña";
}
 
<section class="vh-100";">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-5 col-lg-7 col-md-9">
                <!-- Reduje el ancho del contenedor -->
                <div class="card" style="border-radius: 1rem; background-color: #333;">
                    <div class="row g-0">
                        <div class="col-md-12 col-lg-12 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-4 text-white">
                                <!-- Reduje el padding -->
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                @if (Model.HasError)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <p>@Model.Error</p>
                                        <button type="button" class="btn-close" data-bs-dimiss="alert" arial-label="Close"></button>
                                    </div>
                                }

                                <h5 class="fw-normal mb-3 pb-2">Olvidé mi contraseña</h5>

                                <form asp-action="ForgotPassword" asp-controller="User">
                                   
                                    <div class="form-outline mb-3" data-mdb-input-initialized="true">
                                        <label asp-for="Username" class="form-label" for="form3Example3" style="margin-left: 0px;">Correo</label>
                                        <input asp-for="Username" type="text" class="form-control form-control-lg"/>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                              
                                    <div class="pt-1 mb-3">
                                        <button class="btn btn-lg " type="submit" style="background-color: #008f89; border: none; color: #fff;">Solicitar reseteo de contraseña</button> <!-- Cambié el color del botón -->
                                    </div>

                                  
                                
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




